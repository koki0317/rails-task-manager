<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <ul>
      <li><%= link_to(task.title, task_path(task)) %>・<%= link_to("🗑", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" }) %></li>
    </ul>
  <% end %>
  <%= link_to "🍺Add a new task",  new_task_path %>
</div>
